<% provide :page_title, 'Edit room' %>
<% currently_at 'Hotels' %>
<%= tag.article class: 'mb-3 card', id: dom_id(@room) do %>

<div class="card-body">
  <section class="card-text">
    <p class="mt-2 mb-3"><%= @room.id %></p>
    <p class="mt-2 mb-3"><%= @room.room_type %></p>
    <p class="mt-2 mb-3"><%= @room.price_per_night %></p>

    <div class="photo-gallery">
      <div class="container">
        <div class="row photos">
          
          <% if @room.images.attached? %>
          <% @room.images.each do |image| %>

          <div class="col-sm-6 col-md-4 col-lg-3 item">
            <%= link_to image, data: { lightbox: "room"} do %>
            <%= image_tag image, class: 'img-thumbnail' %>
            <% end %>
          </div>
          <% end %>
          <% end %>
          
        </div>
      </div>
    </div>

    <p class="mt-2 mb-3"><%= @room.bed_type %></p>
    <p class="mt-2 mb-3"><%= @room.number_of_beds %></p>
    <p class="mt-2 mb-3"><%= @room.number_of_people %></p>
    <p class="mt-2 mb-3"><%= @room.booking_type %></p>
    <p class="mt-2 mb-3"><%= @room.food %></p>
    <p class="mt-2 mb-3"><%= @room.comforts %></p>


  </section>

  <%=link_to 'Edit', edit_hotel_room_path(@hotel, @room), class: 'btn btn-info btn-sm' %>
  <%=link_to 'Delete', hotel_room_path(@hotel, @room), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: "Are you sure"} %>
</div>
<% end %>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/js/lightbox.min.js"></script>